<h1>Books</h1>

<table>
    <thead>
    <tr>
        <th>Title</th>
        <th>Body</th>
        <th></th>
    </tr>
    </thead>
<tbody>
<% @books.each do |book| %>

    <tr>
    <td><%=book.title%></td>
    <td><%=book.body%></td>
    <td>
        <%=link_to"Show",book_path(book.id)%>
        <%=link_to"Edit",edit_book_path(book.id)%>
        <%=link_to"Destroy",book%>
    </td>
    </tr>
    <%end%>
    <tbody>
<table>

<h2>New Book</h2>
<%= form_with model:@book,local:true do |f| %>

<div class ="field">
<label for = "book_titile">Title</label>
<%= f.text_field:title %>
</div>

<div class ="field">
<label for = "book_body">Body</label>
<%= f.text_area:body %>
</div>

<div class = "actions">
<%= f.submit 'Create Book' %>
</div>
<%end%>